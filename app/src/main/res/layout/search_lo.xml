<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="слово (EN)"
              android:id="@+id/textView2"
              app:layout_constraintBottom_toTopOf="@+id/sLoEnglishWord"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              app:layout_constraintEnd_toStartOf="@+id/textView3" android:layout_marginEnd="8dp"
              app:layout_constraintTop_toBottomOf="@+id/sLoBack" android:layout_marginTop="16dp"/>
    <EditText android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/sLoEnglishWord"
              app:layout_constraintTop_toBottomOf="@+id/textView2"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              android:layout_marginTop="8dp"
              app:layout_constraintEnd_toStartOf="@+id/sLoRussianWord" android:layout_marginEnd="8dp"/>
    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="перевод (RU)"
              android:id="@+id/textView3"
              app:layout_constraintBottom_toTopOf="@+id/sLoRussianWord"
              app:layout_constraintVertical_chainStyle="spread_inside"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
              app:layout_constraintTop_toBottomOf="@+id/sLoBack" android:layout_marginTop="16dp"/>
    <EditText android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/sLoRussianWord"
              app:layout_constraintTop_toBottomOf="@+id/textView3"
              android:layout_marginTop="8dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/sLoEnglishWord"/>
    <Button
            android:text="найти"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/sLoSearchBtn"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.97"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sLoResult"
            app:layout_constraintVertical_bias="0.12"/>
    <TextView
            android:layout_width="358dp"
            android:layout_height="0dp"
            android:id="@+id/sLoResult"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/sLoRussianWord" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="27dp"
            app:layout_constraintBottom_toTopOf="@+id/sLoSearchBtn"/>
    <Button
            android:text="назад"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sLoBack"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>