<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:text="слово"
              android:id="@+id/textView9"
              app:layout_constraintBottom_toTopOf="@+id/add_lo_word"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
              android:layout_marginBottom="4dp"/>
    <EditText android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:id="@+id/add_lo_word"
              app:layout_constraintTop_toBottomOf="@+id/textView9"
              android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:text="перевод"
              android:id="@+id/textView12" android:layout_marginTop="18dp"
              app:layout_constraintTop_toBottomOf="@+id/add_lo_word"
              app:layout_constraintBottom_toTopOf="@+id/add_lo_trans" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"/>
    <EditText android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:id="@+id/add_lo_trans"
              app:layout_constraintTop_toBottomOf="@+id/textView12"
              android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:text="толкование"
              android:id="@+id/textView10"
              android:layout_marginTop="18dp" app:layout_constraintTop_toBottomOf="@+id/add_lo_trans"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <EditText android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:id="@+id/add_lo_interp"
              android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"/>
    <Button
            android:text="Добавить слово"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_lo_AddWord"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="124dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_lo_interp"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.9"/>
    <Button
            android:text="назад"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectBtn"
            app:layout_constraintBottom_toTopOf="@+id/textView9" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintHorizontal_bias="0.089" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>


</android.support.constraint.ConstraintLayout>